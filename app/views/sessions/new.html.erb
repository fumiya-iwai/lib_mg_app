<div class="session-dialog">
  <%= image_pack_tag 'media/images/logo.svg', class: 'logo' %>

  <%= form_with(url: login_path, scope: :session) do |f| %>
    <%= f.label 'メールアドレス', class: 'form-label' %>
    <%= f.email_field :email, class: 'form-input' %>
    <%= f.label 'パスワード', class: 'form-label' %>
    <%= f.password_field :password, class: 'form-input' %>
    <%= f.submit "ログイン", class: "form-button" %>
  <% end %>
</div>
